<p id="notice"><%= notice %></p>
 

<div class="row">
  <div class="tab col-md-3">
   <%= link_to eventos_path  do %> <button class="tablinks" ><img src="<%= asset_path 'icons/png/calendar-23.png'%>"  width="30" height="30" class="d-inline-block align-top" alt=""> Eventos</button> <%end%> 
   <%= link_to empresas_path  do %> <button class="tablinks"><img src="<%= asset_path 'icons/png/archive-3.png'%>"  width="30" height="30" class="d-inline-block align-top" alt=""> Empresas</button><%end%>
   <button class="tablinks" onclick="openCity(event, 'Universidades')"><img src="<%= asset_path 'icons/png/notebook-3.png'%>"  width="30" height="30" class="d-inline-block align-top" alt=""> Universidades</button> 
  </div>

  <div id="Universidades" class="tab-content col-md-9">

    <h1>Universidades</h1>

    <table class="table table-striped table-responsive">
      <thead>
        <tr>
          <th>Picture</th>
          <th>Redes</th>
          <th>Nombre</th>
          <th>Direccion</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @universidads.each do |universidad| %>
          <tr>
            <td><%= link_to universidad do%><%= image_tag universidad.picture.thumb.url, class: 'figure-img img-fluid rounded', width:'180', height:'180'%><% end %></td>
            <td><br><%= link_to universidad.facebook do %><img src="<%= asset_path 'social/png/036-facebook.png'%>"  width="20" height="20" class="d-inline-block align-top" alt=""><% end %> <br>
                <%= link_to universidad.twitter do %><img src="<%= asset_path 'social/png/008-twitter.png'%>"  width="20" height="20" class="d-inline-block align-top" alt=""><% end %> <br>
                <%= link_to universidad.instagram do %><img src="<%= asset_path 'social/png/029-instagram.png'%>"  width="20" height="20" class="d-inline-block align-top" alt=""><% end %> <br>
                <%= link_to universidad.web do %><img src="<%= asset_path 'politics/png/012-analytics.png'%>"  width="20" height="20" class="d-inline-block align-top" alt=""><% end %></td>
            <td><br><h3><%= universidad.nombre %></h3></td>
            <td><br><%= universidad.direccion %>, <br><%= Municipio.find(universidad.municipio).nombre  %></td>
            <td><%= link_to edit_universidad_path(universidad) do %><img src="<%= asset_path 'icons/png/archive-12.png'%>"  width="20" height="20" class="d-inline-block align-top" alt=""><% end %>
                <%= link_to universidad, method: :delete, data: { confirm: 'Desea desactivar '+universidad.nombre()+'?' } do%><img src="<%= asset_path 'icons/png/archive-2.png'%>"  width="20" height="20" class="d-inline-block align-top" alt=""><% end %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Universidad', new_universidad_path, :remote=>true %>
    <div id="new_universidad" style="display: none;"></div>
    <br> <br>
  </div>
</div>