<div class="row">
  <div class="tab col-md-3">
   <button class="tablinks" onclick="openCity(event, 'Empresarios')"><img src="<%= asset_path 'politics/png/002-group-1.png'%>"  width="30" height="30" class="d-inline-block align-top" alt=""> Empresarios</button>
  </div>

  <div id="Empresarios" class="tab-content col-md-9">
     <br>
     <div class="row">
        <div class="col-md-3"><h1>Empresarios</h1></div>
        <div class="col-md-6"></div>
        <div class="col-md-3"><%= link_to new_empresario_path, class: "btn btn-success", :remote=>true do%><img src="<%= asset_path 'politics/png/002-group-1.png'%>"  width="30" height="30" class="d-inline-block align-top" alt=""> Nuevo <%end%></div>
      </div>
      <br>

    <table class="table table-striped table-responsive">
      <thead>
        <tr></tr>
          <th>Picture</th>
          <th>Redes</th>
          <th>Nombre</th>
          <th>Apellidos</th>
          <th>Empresa</th>
          <th>Municipio</th>
          <th>E-mail</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @empresarios.each do |empresario| %>
          <tr>
            <td><%= image_tag empresario.picture.medium.url, class: 'figure-img img-fluid rounded', width:'60', height:'60'%></td>
            <td><%= link_to empresario.facebook do %><img src="<%= asset_path 'social/png/036-facebook.png'%>"  width="20" height="20" class="d-inline-block align-top" alt=""><% end %> <br>
                <%= link_to empresario.twitter do %><img src="<%= asset_path 'social/png/008-twitter.png'%>"  width="20" height="20" class="d-inline-block align-top" alt=""><% end %> <br>
                <%= link_to empresario.instagram do %><img src="<%= asset_path 'social/png/029-instagram.png'%>"  width="20" height="20" class="d-inline-block align-top" alt=""><% end %> <br>
            <td><%= empresario.nombre %></td>
            <td><%= empresario.apellido %></td>
            <td><%= Empresa.find(empresario.empresa).nombre %></td>
            <td><%= Municipio.find(empresario.municipio).nombre %></td>
            <td><%= empresario.email %></td>
            <td><%= link_to edit_empresario_path(empresario) do %><img src="<%= asset_path 'icons/png/user-52.png'%>"  width="20" height="20" class="d-inline-block align-top" alt=""><% end %>
                <%= link_to empresario, method: :delete, data: { confirm: 'Desea desactivar '+empresario.nombre()+'?' } do%><br><img src="<%= asset_path 'icons/png/user-42.png'%>"  width="20" height="20" class="d-inline-block align-top" alt=""><% end %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
    <div id="new_empresario" style="display: none;"></div>

  </div>
</div>