<!-- Venatana Modal -->
<div class="modal fade" id="modal_evento" tabindex="-1" role="dialog" aria-labelledby="modalLabel">
		<div class="modal-dialog modal-lg" role="document">
			
			<!--Contenido Modal-->
			<div class="modal-content">
				<div class="modal-header">
					<div class="col-sm-3">
						<h5><img src="<%= asset_path 'icons/png/calendar-20.png'%>"  width="30" height="30" class="d-inline-block align-top" alt="">
						SysCCES</h5>
					</div>

					<h4 class="modal-title" id="modalLabel">Crear Nuevo Evento</h4>

					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>

				<div class="modal-body">
					<!-- Formulario -->
					<%= form_for @evento, :remote =>true do |f| %>
						
						<!-- Control de errores -->
						<% if @evento .errors.any? %>
							<div id="error_explanation">
								<h2><%= pluralize(@evento.errors.count, "error") %> No se permite crear este Evento: </h2>

								<ul>
									<% @evento .error.full_messages.each do |message| %>
										<li><%= message %></li>
									<% end %>
								</ul>
							</div>
						<% end %>

						<div class="row">
							<div class="col-sm-1">
								
							</div>


							<div class="col-sm-10">
								<h2>Datos del Evento: </h2>
								<br>
								<div class="form-group">
									<label for="nombre">Nombre*:</label>
									<%= f.text_field :nombre, class: "form-control input-lg", placeholder:"Nombre", :required => true, oninvalid: "this.setCustomValidity('Nombre')", oninput: "setCustomValidity('')"%>	
								</div>

								<div class="form-group">
									<label for="fechaI"> Fecha*:</label><br>
									<%= f.date_select :fecha, :required => true, start_year: 1920 %>
								</div>

								<div class="form-group">
									<label for="fechaI"> Hora*:</label><br>
									<%= f.time_select :hora, :required => true %>
								</div>

								<div class="form-group">
									<label for="nombre">Dirección*:</label>
									<%= f.text_field :direccion, class: "form-control input-lg", placeholder:"Dirección", :required => true, oninvalid: "this.setCustomValidity('Dirección')", oninput: "setCustomValidity('')"%>	
								</div>

								<div class="form-group">
									<label for="nombre">Zona*:</label><br>
									<%= f.select(:zona, @zonas, :required => true, oninvalid: "this.serCustomVality('Zona')") %>	
								</div>

								
							    <br><br>
							    <h2>Datos para el Formulario de inscripción</h2>
							    <br>

								<div class="form-group">
									<label for="empresa">Tipo de Evento*:</label><br>
									<%= f.select(:tipo, @tipos, :required => true, oninvalid: "this.serCustomVality('Tipo de evento')") %><br>	
									<small><b>Nota:</b> Si su respuesta es "<i>Otros Eventos</i>", poner en el campo de Descripción el tipo y el objetivo</small>
								</div>

								<div class="form-group">
									<label for="celular">Número de asistentes*:</label>
									<%= f.number_field :asistentes, class: "form-control input-lg", placeholder:"Ejm: 22", :required => true, oninvalid: "this.setCustomValidity('Nro máximo de asistentes al evento')", oninput: "setCustomValidity('')"%>
								</div>

								<div class="form-group">
							      <label for="descripcion">Mensaje que aparecerá al inicio del formulario:</label>
							      <%= f.text_area :mensaje, class: "form-control input-lg", placeholder:"¿Qué Mensaje tienes para los invitados?", :required => false, oninvalid: "this.setCustomValidity('Mensaje)", oninput: "setCustomValidity('')"%>	
							    </div>

							
								<div class="form-group">
							      <label for="descripcion">Descripción:</label>
							      <%= f.text_area :descripcion, class: "form-control input-lg", placeholder:"Descripción", :required => false, oninvalid: "this.setCustomValidity('Descripción)", oninput: "setCustomValidity('')"%>	
							    </div>

								  <% if current_user.id == 1 then %>
								  	<div class="form-group">
										<label for="fechaI"> Estado: </label><br>
										<%= f.check_box :activo %>
									</div>
								  <% end %>


							</div>

							<div class="col-sm-1">
							
							</div>
						</div>
				
						<div class="modal-footer">
							<%= f.submit class: "btn btn-primary btn-log bton-block", value:"Guardar"%>
							<button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
						</div>
						
					<% end %>	
				</div>
			</div>
		</div>
	</div>
