<p id="notice"><%= notice %></p>


<div class="tab">
 <button class="tablinks" onclick="openCity(event, 'Eventos') ">Eventos</button>
 <button class="tablinks" onclick="openCity(event, 'Empresas')">Empresas</button>
 <button class="tablinks" onclick="openCity(event, 'Universidades')">Universidades</button>
</div>

<div id="Eventos" class="tabcontent">
  <h1>Eventos</h1>

  <table>
    <thead>
      <tr>
        <th>Zona</th>
        <th>Activo</th>
        <th>Fecha</th>
        <th>Modificador</th>
        <th>Creador</th>
        <th>Descripcion</th>
        <th>Nombre</th>
        <th>Direccion</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @eventos.each do |evento| %>
        <tr>
          <td><%= evento.zona %></td>
          <td><%= evento.activo %></td>
          <td><%= evento.fecha %></td>
          <td><%= evento.modificador %></td>
          <td><%= evento.creador %></td>
          <td><%= evento.descripcion %></td>
          <td><%= evento.nombre %></td>
          <td><%= evento.direccion %></td>
          <td><%= link_to 'Show', evento %></td>
          <td><%= link_to 'Edit', edit_evento_path(evento) %></td>
          <td><%= link_to 'Destroy', evento, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Evento', new_evento_path %>
</div>

<div id="Empresas" class="tabcontent" style="display:none">
 <h3>Paris</h3>
 <p>Paris is the capital of France.</p>
</div>

<div id="Universidades" class="tabcontent" style="display:none">
 <h3>Tokyo</h3>
 <p>Tokyo is the capital of Japan.</p>
</div>
