<p id="notice"><%= notice %></p>

<div class="row">
  <div class="tab col-md-3">
   <button class="tablinks" onclick="openCity(event, 'Eventos')"><img src="<%= asset_path 'icons/png/calendar-23.png'%>"  width="30" height="30" class="d-inline-block align-top" alt=""> Eventos</button>
   <%= link_to empresas_path  do %> <button class="tablinks" ><img src="<%= asset_path 'icons/png/archive-3.png'%>"  width="30" height="30" class="d-inline-block align-top" alt=""> Empresas</button> <%end%> 
   <%= link_to universidads_path  do %> <button class="tablinks"><img src="<%= asset_path 'icons/png/notebook-3.png'%>"  width="30" height="30" class="d-inline-block align-top" alt=""> Universidades</button><%end%> 
  </div>

  <div class="tab-content col-md-9" id="v-pills-tabContent">
      
      <!-- Tabla Eventos -->
      <div class="tab-pane fade show active" id="v-pills-admins" role="tabpanel" aria-labelledby="v-pills-admins-tab">
        <div class="container mt40">
          <h1>Eventos</h1>
          <br>
          <section class="row">
      
            <% @eventos.each do |evento| %>
              <article class="col-xs-12 col-sm-8 col-md-4">
                  <div class="panel panel-default">

                    <div class="row">
                      <div class="col-md-9"><b><%= evento.hora.to_s(:time) %></b>  - <%= evento.fecha.to_formatted_s(:short) %></div>
                      <div class="col-md-2"><%= link_to Zona.find(evento.zona).lmap do %>
                          <img src="<%= asset_path 'icons/png/map-9.png'%>"  width="20" height="20" class="d-inline-block align-top" alt=""><% end %></div>
                    </div>

                    <div class="panel-body">
                      <%= link_to evento, class:"zoom", :remote=>true do%>
                        <%= image_tag evento.picture.medium.url, class:"img-card"%>
                        <span class="overlay"><i class="glyphicon glyphicon-fullscreen"></i></span>
                      <% end %>
                    </div>
                    <hr>
                    <div class="row">
                      <div class="col-md-8">
                        <h6><%= link_to evento do%><%= evento.nombre%><% end %></h6>
                      </div>
                      <div class="col-md-4" >
                        <%= link_to edit_evento_path(evento) do %>
                          <img src="<%= asset_path 'icons/png/calendar-32.png'%>"  width="20" height="20" class="d-inline-block align-top" alt="">
                        <% end %>
                        <%= link_to evento, method: :delete, data: { confirm: 'Desea desactivar '+evento.nombre()+'?' } do%>
                         <img src="<%= asset_path 'icons/png/calendar-22.png'%>"  width="20" height="20" class="d-inline-block align-top" alt="">
                        <% end %>

                        <div class="col-md-3" ></div>
                      </div>
                    </div>
                  </div> 
                  <br>
              </article>
            <%end%>
          </section>

        </div>
      </div>
    </div>

</div>
