<h1>Zonas</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Municipio</th>
      <th>Activo</th>
      <th>Modificador</th>
      <th>Creador</th>
      <th>Lmap</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @zonas.each do |zona| %>
      <tr>
        <td><%= zona.nombre %></td>
        <td><%= zona.municipio %></td>
        <td><%= zona.activo %></td>
        <td><%= zona.modificador %></td>
        <td><%= zona.creador %></td>
        <td><%= zona.lmap %></td>
        <td><%= zona.descripcion %></td>
        <td><%= link_to 'Show', zona %></td>
        <td><%= link_to 'Edit', edit_zona_path(zona) %></td>
        <td><%= link_to 'Destroy', zona, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

