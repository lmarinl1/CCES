<p id="notice"><%= notice %></p>

<div class="row">
  <div class="tab col-md-3">
   <%= link_to eventos_path  do %> <button class="tablinks" ><img src="<%= asset_path 'icons/png/calendar-23.png'%>"  width="30" height="30" class="d-inline-block align-top" alt=""> Eventos</button> <%end%> 
   <button class="tablinks" onclick="openCity(event, 'Empresas')"><img src="<%= asset_path 'icons/png/archive-3.png'%>"  width="30" height="30" class="d-inline-block align-top" alt=""> Empresas</button>
   <%= link_to universidads_path  do %> <button class="tablinks"><img src="<%= asset_path 'icons/png/notebook-3.png'%>"  width="30" height="30" class="d-inline-block align-top" alt=""> Universidades</button><%end%> 
  </div>

  <div id="Empresas" class="tab-content col-md-9">

    <h1>Empresas</h1>

    <table class="table table-striped table-responsive">
      <thead>
        <tr>
          <th>Picture</th>
          <th>Redes</th>
          <th>Nombre</th>
          <th>Direccion</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @empresas.each do |empresa| %>
          <tr>
            <td><%= link_to empresa do%><%= image_tag empresa.picture.thumb.url, class: 'figure-img img-fluid rounded', width:'180', height:'180'%><% end %></td>
            <td><br><%= link_to empresa.facebook do %><img src="<%= asset_path 'social/png/036-facebook.png'%>"  width="20" height="20" class="d-inline-block align-top" alt=""><% end %> <br>
                <%= link_to empresa.twitter do %><img src="<%= asset_path 'social/png/008-twitter.png'%>"  width="20" height="20" class="d-inline-block align-top" alt=""><% end %> <br>
                <%= link_to empresa.instagram do %><img src="<%= asset_path 'social/png/029-instagram.png'%>"  width="20" height="20" class="d-inline-block align-top" alt=""><% end %> <br>
                <%= link_to empresa.web do %><img src="<%= asset_path 'politics/png/012-analytics.png'%>"  width="20" height="20" class="d-inline-block align-top" alt=""><% end %></td>
            <td><br><h3><%= empresa.nombre %></h3></td>
            <td><br><%= empresa.direccion %>, <br><%= Municipio.find(empresa.municipio).nombre  %></td>
            <td><%= link_to edit_empresa_path(empresa) do %><img src="<%= asset_path 'icons/png/archive-12.png'%>"  width="20" height="20" class="d-inline-block align-top" alt=""><% end %>
                <%= link_to empresa, method: :delete, data: { confirm: 'Desea desactivar '+empresa.nombre()+'?' } do%><img src="<%= asset_path 'icons/png/archive-2.png'%>"  width="20" height="20" class="d-inline-block align-top" alt=""><% end %></td>
          </tr>
        <% end %>
      </tbody>
    </table>


    <%= link_to 'Nueva Empresa', new_empresa_path, :remote=>true %>
    <div id="new_empresa" style="display: none;"></div>
    <br><br>
  </div>
</div>